{
  "manifest_version": 3,
  "name": "WCAG Corrector",
  "version": "1.0",
  "description": "Корректирует веб-сайты под стандарты WCAG",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js",
            "standards/standard-1.1.1.js",
            "standards/standard-1.2.2.js",
            "standards/standard-1.3.1.js",
            "standards/standard-1.4.2.js",
            "standards/standard-1.4.4.js",
            "standards/standard-2.1.1.js",
            "standards/standard-2.4.7.js",
            "standards/standard-3.1.1.js",
            "standards/standard-4.1.2.js"],
      "run_at": "document_idle"
    }
  ]
}
